---
import PageLayout from "../../layouts/PageLayout.astro";

type Project = {
  title: string;
  description: string;
  link: string;
  language: string;
  stars: number;
};

const response = await fetch("https://git-pinned-production.up.railway.app/");
const projects = (await response.json()) as Project[];
import { Icon } from "astro-icon";
---

<PageLayout
  title="Projects"
  description="A collection of my work"
  activeNav="projects"
>
  <ul class="space-y-5">
    {
      projects.map((project) => {
        return (
          <li>
            <a href={project.link} class="inline-block">
              <h2 class="text-skin-accent hover:text-skin-accent-hover text-lg hover:underline">
                {project.title}
              </h2>
            </a>
            <p class="text-skin-muted">{project.description}</p>
            <div class="flex flex-row space-x-4">
              <p>{project.language}</p>
              <div class="flex flex-row">
                <Icon
                  name="ph:star"
                  class="mb-0.5 mr-1 inline-block h-5 w-5 align-middle"
                />
                <p>{project.stars}</p>
              </div>
            </div>
          </li>
        );
      })
    }
  </ul>
</PageLayout>
