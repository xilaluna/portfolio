---
import Layout from "./Layout.astro";
import Heading from "../components/Heading.astro";

export interface Props {
  title: string;
  description: string;
  activeNav: "home" | "projects" | "blog" | "links";
}

const { title, description, activeNav } = Astro.props as Props;
---

<Layout title={title} activeNav={activeNav}>
  <main class="mx-auto max-w-screen-sm space-y-10 px-4 py-10 sm:px-0">
    <Heading title={title} description={description} />
    <slot />
  </main>
</Layout>
