---
import "../styles/base.css";
import { Icon } from "astro-icon";
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header class="sticky top-0 z-10 backdrop-blur-md">
      <nav
        class="mx-auto max-w-screen-sm px-4 sm:px-0 flex justify-between items-center border-b py-5"
      >
        <Icon name="ph:house" class="h-6 w-6" />
        <Icon name="ph:rocket-launch" class="h-6 w-6" />
        <Icon name="ph:brain" class="h-6 w-6" />
        <Icon name="ph:newspaper" class="h-6 w-6" />
        <Icon name="ph:link" class="h-6 w-6" />
      </nav>
    </header>
    <slot />
    <footer
      class="mx-auto max-w-screen-sm px-4 sm:px-0 py-5 flex justify-center items-center border-t"
    >
      <p>
        {"Copyright Â© "}
        {new Date().getFullYear()}
        {" Xila Luna"}
      </p>
    </footer>
  </body>
</html>
